@inject Microsoft.Extensions.Localization.IStringLocalizer<Index> Loc

@code
{
    private string Title
    {
        get
        {
            return Loc["Title"];
        }
    }

    private string WelcomeMessage
    {
        get
        {
            return Loc["WelcomeMessage"];
        }
    }

