@using Microsoft.Extensions.Configuration
@layout VideoAnalyzer.Client.Themes.PTI.PTIDefaultLayout
@using VideoAnalyzer.Client.Themes
@inject Microsoft.Extensions.Localization.IStringLocalizer<NavMenu> Loc
@inject IConfiguration configuration
<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">
        <img src="@LogoUrl" height="40"  width="60" />
    </a>
        <a href="" target="_blank">Video Analyzer</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="sidebar" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> @Loc["LinkHome"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Videos">
                <span class="oi oi-video" aria-hidden="true"></span> @Loc["LinkVideos"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Search">
                <span class="oi oi-magnifying-glass" aria-hidden="true"></span> @Loc["LinkSearch"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Upload">
                <span class="oi oi-data-transfer-upload" aria-hidden="true"></span> @Loc["LinkUpload"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Keywords">
                <span class="oi oi-key" aria-hidden="true"></span> @Loc["AllKeywords"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="PersonsModels">
                <span class="oi oi-person" aria-hidden="true"></span> @Loc["PersonsModels"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Persons">
                <span class="oi oi-people" aria-hidden="true"></span> @Loc["AllPersons"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Get Transcription">
                <span class="oi oi-book" aria-hidden="true"></span> @Loc["AllTranscripts"]
            </NavLink>
        </li>
    </ul>
</div>

@code {
    [CascadingParameter]
    private ThemeConfiguration CurrentTheme { get; set; }
    private string LogoUrl
    {
        get
        {
            return this.configuration["LogoUrl"];
        }
    }
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}
